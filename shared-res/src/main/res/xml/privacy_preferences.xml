   <androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        app:defaultValue="true"
        app:iconSpaceReserved="false"
        app:key="pref_share_stats"
        app:title="@string/pref_share_stats_title"
        app:summary="@string/pref_share_stats_summ" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/pref_privacy_info_collection_title">
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_pkg_name"
            app:title="@string/pkg_name" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_app_version_code"
            app:title="@string/app_version_code" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_app_version_name"
            app:title="@string/app_version_name" />
    </PreferenceCategory>
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/system">
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_device_model"
            app:title="@string/device_model" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_sdk_version"
            app:title="@string/sdk_version" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_build_id"
            app:title="@string/build_id" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_release"
            app:title="@string/release" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_board"
            app:title="@string/board" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_brand"
            app:title="@string/brand" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_cpu_arch"
            app:title="@string/cpu_arch" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_country"
            app:title="@string/country" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_locale"
            app:title="@string/locale" />
    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
