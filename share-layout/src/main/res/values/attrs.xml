   <resources>
    <!-- ~ Base application attributes. ~ Custom widgets inclusive -->
    <!-- ~ Style to use for MaterialDivider in the theme. -->

    <attr
        name="ShareLayoutStyle"
        format="reference" />

    <dimen name="action_default_elevation">2dp</dimen>
    <dimen name="action_default_radius">28dp</dimen>
    <!-- ShareLayout -->
    <declare-styleable name="ShareLayout">

        <!-- Set Layout background color for root layout -->
        <attr
            name="shareLayoutColor"
            format="color|reference" />
        <!-- Flag boolean for progressbar visibility. -->
        <attr
            name="showProgressBar"
            format="boolean" />
        <!-- ShareButton. -->
        <attr
            name="shareButtonTextSize"
            format="dimension" />
        <attr
            name="shareActionsCornerRadius"
            format="dimension" />

        <!-- Unused Container color -->
        <attr
            name="containerColor"
            format="color" />
        <!-- ShareLayout title. -->
        <attr
            name="titleText"
            format="string" />
        <!-- ShareLayout summary. -->
        <attr
            name="summaryText"
            format="string" />
        <!-- ShareLayout share prompt or info text. -->
        <attr
            name="promptText"
            format="string" />
        <!-- ShareButton text. -->
        <attr
            name="shareButtonText"
            format="string" />
        <!-- TextAppearance -->
        <attr
            name="titleTextAppearance"
            format="reference" />
        <attr
            name="summaryTextAppearance"
            format="reference" />
        <attr
            name="promptTextAppearance"
            format="reference" />
        <attr
            name="shareButtonTextAppearance"
            format="reference" />
        <!-- Dimensioning -->
        <attr
            name="elevation"
            format="dimension" />
    </declare-styleable>

    <!-- Styling for ShareLayout better customization. -->

    <style
        name="Widget.TeckrodMiUi.ShareLayout"
        parent="android:Widget">
        <item name="shareActionsCornerRadius">@dimen/action_default_radius</item>
        <item name="elevation">@dimen/action_default_elevation</item>
        <item name="shareLayoutColor">@color/miui_sharelayout_color</item>
    </style>
</resources>
